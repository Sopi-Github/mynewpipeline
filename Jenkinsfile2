pipeline
    {
	  agent any
	      tools {
        gradle "localgradle"
                }
    
	  stages
	  {
        stage('Gradle') {
            steps {
                sh 'gradle --version'
            }
        }
		   stage ('scm checkout')
		     {
			   steps {
						git branch: 'master', url: 'https://github.com/Sopi-Github/mynewpipeline.git'
				     }
			  }
		   stage ('gradle build')
		   {
		       steps {
			        withGradle {
					sh './gradlew clean'
					sh './gradlew assemble'
                    sh './gradlew build'
				}			   
			   }
		   }
		 }
    }
